<div class="mb-4">
  <span class="font-bold text-gray-700 dark:text-gray-300">Select Color:</span>
  <div class="flex items-center mt-2">
    <button id="productColor-<%- product.pk %>-<%- product.colors[0] %>"
      onclick="selectColor(this, '<%- product.pk %>')"
      data-value="<%- product.colors[0] %>"
      class="productColor-<%- product.pk %> active bg-gray-300 dark:bg-gray-700 text-gray-700 dark:text-white py-2 px-4 rounded-full font-bold mr-2 hover:bg-gray-400 dark:hover:bg-gray-600 cursor-pointer">
      <%- product.colors[0] %>
    </button>
  <% product.colors.slice(1).forEach((color) => { %>
    <button id="productColor-<%- product.pk %>-<%- color %>"
      onclick="selectColor(this, '<%- product.pk %>')"
      data-value="<%- color %>"
      class="productColor-<%- product.pk %> bg-gray-300 dark:bg-gray-700 text-gray-700 dark:text-white py-2 px-4 rounded-full font-bold mr-2 hover:bg-gray-400 dark:hover:bg-gray-600 cursor-pointer">
      <%- color %>
    </button>
  <% }) %>
  </div>
</div>
