<div class="flex -mx-2 mb-4">
  <div class="w-1/2 px-2">
    <% if (product.disabled) { %>
      <button disabled class="w-full bg-gray-300 text-gray-500 py-3 px-4 rounded-full font-bold cursor-not-allowed">Add to Cart</button>
    <% } else { %>
      <button onclick="addProductToCart('<%- product.pk %>')" class="w-full <%- site.mainBtnColor %> text-white py-3 px-4 rounded-full font-bold cursor-pointer">Add to Cart</button>
    <% } %>
  </div>
  <div class="w-1/2 px-2">
    <% if (product.disabled) { %>
      <button class="w-full bg-gray-300 text-gray-500 py-3 px-4 rounded-full font-bold cursor-not-allowed">Buy it Now</button>
    <% } else { %>
      <button onclick="buyProductNow('<%- product.pk %>')" class="w-full <%- site.secondBtnColor %> text-gray-50 dark:text-white py-3 px-4 rounded-full font-bold cursor-pointer">Buy it Now</button>
    <% } %>
  </div>
</div>
